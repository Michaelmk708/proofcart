# ProofCart Backend - Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/proofcart_db
# For Render: postgres://username:password@host:5432/database

# CORS Settings (Frontend URL)
FRONTEND_URL=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
ESCROW_PROGRAM_ID=your-deployed-program-id
SOLANA_PAYER_KEYPAIR_PATH=./keypair.json

# Internet Computer (ICP) Configuration
ICP_CANISTER_ID=your-canister-id
ICP_HOST=https://ic0.app
ICP_IDENTITY_PATH=./identity.pem

# IPFS/NFT Storage
NFT_STORAGE_API_KEY=your-nft-storage-api-key
IPFS_GATEWAY=https://ipfs.io/ipfs/

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# Admin Configuration
ADMIN_EMAIL=admin@proofcart.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Email Configuration (for notifications - optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
